<div class="login-container">
        
            <div class="login-box animated fadeInDown">
            	<div class="login-title">Social Trap</div>
                <div class="login-body">
                    <div class="login-title"><strong>Log In</strong> to your account</div>
                    <%= simple_form_for(resource, as: resource_name,html: {class: 'form-horizontal' }, url: session_path(resource_name)) do |f| %>
                        <div class="col-md-12 form-group">
                            <%= f.input :email,label: false, required: true,input_html: {class: "form-control"},wrapper: false, placeholder: "Email"%>
                        </div>
                        <div class="col-md-12 form-group">
                            <%= f.input :password,label: false, required: true,input_html: {class: "form-control"},wrapper: false, placeholder: "Password"%>
                        </div>
                        <div class="form-group">
                        <div class="col-md-6">
                            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-info btn-block" %>
                        </div>
                        <div class="col-md-6">
                            <%= f.button :submit, "Log in", class: "btn btn-info btn-block" %>
                        </div>
                        </div>
                    <% end %>
                
                   
                    <div class="login-subtitle">

                        Don't have an account yet? <%= link_to "create new account", new_registration_path(resource_name) %>
                    </div>
                    </form>
                </div>
            </div>
 </div>
            






